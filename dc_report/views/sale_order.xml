<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
     <record id="sale_new_field" model="ir.ui.view">
            <field name="name">sale.new.fields</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name = 'partner_id']" position="after">
                <field name="consignee_name" domain="[('parent_id','=',partner_id)]" context="{'consigne_name' : True}"/>
                </xpath>
                <xpath expr="//field[@name = 'partner_id']" position="attributes">
                    <attribute name="domain">[('is_company','=',True)]
                    </attribute>
                </xpath>
            </field>
     </record>

    <record id="stock_new_field" model="ir.ui.view">
            <field name="name">stockpicking.new.fields</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name = 'partner_id']" position="after">
                <field name="consignee_name" domain="[('parent_id','=',partner_id)]" context="{'custom_field' : True}"/>
                </xpath>
                <xpath expr="//field[@name = 'partner_id']" position="attributes">
                    <attribute name="domain">[('is_company','=',True)]
                    </attribute>
                </xpath>
            </field>
     </record>
</odoo>