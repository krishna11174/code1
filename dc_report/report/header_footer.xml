        <!--DC challana Header-->
        <template id="tronics_header">
            <div class="header">
                <t t-if="m==1">
                    <div class="label" style="text-align: right;">
                    <span>Original</span>
                    </div>
                </t>
                <t t-if="m==2">
                    <div class="label_duplicate" style="text-align: right;">
                    <span>Duplicate</span>
                    </div>
                </t>
                <t t-if="m==3">
                    <div class="label_triplicate" style="text-align: right;">
                    <span>Triplicate</span>
                    </div>
                </t>
                <t t-if="m==4">
                    <div class="label_security" style="text-align: right;">
                    <span>Security</span>
                    </div>
                </t>
                <table class="table table-bordered" style="border-collapse:collapse; border: 1px solid black;"
                       width="100%">
                    <tr style="border:none" height="">
                        <td width="20%" rowspan="2" style="border-right:none;">
                            <!--                            <div>-->
                            <img src="/web/binary/company_logo" style="height:115px;"/>
                            <!--                            </div>-->
                        </td>
                        <td style="font-size:16; color: red; text-align: left; vertical-align: top; border-left:none; border-bottom:none;">
                            <span t-if="o.company_id.name" t-esc="o.company_id.name"/>
                        </td>
                    </tr>
                    <tr style="border:none;">
                        <td style="font-size:10px; vertical-align:top; border-left:none; border-top:none;">
                            <div style="font-weight:2px;">
                                <span t-if="o.company_id.street" t-esc="o.company_id.street"/>
                            </div>
                            <div style="float:left; width:50%">
                                <span>GSTIN/UIN :</span>
                                <t t-if="o.company_id.vat" t-esc="o.company_id.vat"/>
                                <br/>
                                <span>State Name :</span>
                                <t t-if="o.company_id.state_id.name" t-esc="o.company_id.state_id.name"/>
                                <br/>
                                <span>E-mail :</span>
                                <t t-if="o.company_id.email" t-esc="o.company_id.email"/>
                            </div>
                            <div style="float: center;">
                                <span>Phone No. :</span>
                                <t t-if="o.company_id.phone" t-esc="o.company_id.phone"/>
                                <br/>
                                <span>Website :</span>
                                <t t-if="o.company_id.website" t-esc="o.company_id.website"/>
                                <br/>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </template>
        <!-- END-->
